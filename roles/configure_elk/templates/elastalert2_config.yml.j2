---
use_ssl: True

es_host: elastic.{{ homelab_domain_external }}
es_port: 9200

es_api_key: {{ secret_elastalert_api_key }}

writeback_index: elastalert_status

alert_time_limit:
  days: 2

buffer_time:
  hours: 6

run_every:
  minutes: 5

rules_folder: /opt/elastalert2/rules


discord_webhook_url: "{{ secret_discord_webhook_url }}"
discord_emoji_title: ":lock:"
discord_embed_color: 0xE24D42
discord_embed_footer: "Elastalert2"
discord_embed_icon_url: "https://humancoders-formations.s3.amazonaws.com/uploads/course/logo/38/thumb_bigger_formation-elasticsearch.png"
