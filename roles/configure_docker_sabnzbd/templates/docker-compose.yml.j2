---
services:
  sabnzbd:
    image: lscr.io/linuxserver/sabnzbd:latest
    container_name: sabnzbd
    environment:
      - PUID=1086
      - PGID=1086
      - TZ=Australia/Perth
    volumes:
      - /mnt/Quina/configs/sabnzbd/config:/config
      - /mnt/Quina/downloads/usenet/complete:/downloads #optional
      - /mnt/Quina/downloads/usenet/incomplete:/incomplete-downloads #optional
    ports:
      - 8081:8080
    networks:
      net-sabnzbd:
    restart: unless-stopped

  sonarr:
    image: lscr.io/linuxserver/sonarr:latest
    container_name: sonarr
    environment:
      - PUID=1086
      - PGID=1086
      - TZ=Etc/UTC
    volumes:
      - /mnt/Quina/configs/radarr/config:/config
      - /mnt/Quina/downloads/usenet/tv:/tv #optional
      - /mnt/Quina/downloads/usenet/complete:/downloads #optional
    ports:
      - 8989:8989
    restart: unless-stopped
    networks:
      net-sabnzbd:

  radarr:
    image: lscr.io/linuxserver/radarr:latest
    container_name: radarr
    environment:
      - PUID=1086
      - PGID=1086
      - TZ=Etc/UTC
    volumes:
      - /mnt/Quina/configs/radarr/config:/config
      - /mnt/Quina/downloads/usenet/movies:/movies #optional
      - /mnt/Quina/downloads/usenet/complete:/downloads #optional
    ports:
      - 7878:7878
    restart: unless-stopped
    networks:
      net-sabnzbd:

networks:
  net-sabnzbd:
    driver_opts:
      com.docker.network.bridge.name: br-sabnzbd
